{% extends 'base.html.twig' %}

{% block title %}Date{% endblock %}

{% block body %}
<div class="container">
    <h1>Date</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ date.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ date.date ? date.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_date_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app_date_edit', {'id': date.id}) }}" class="btn btn-secondary">edit</a>

    {{ include('date/_delete_form.html.twig') }}
</div>
{% endblock %}
